{
  "functions": {
    "app/api/widget/[slug]/embed/route.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/widget/(.*)/embed",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://www.notion.so https://notion.so https://*.notion.so;"
        }
      ]
    },
    {
      "source": "/embed/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://www.notion.so https://notion.so https://*.notion.so;"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/embed/:slug",
      "destination": "/api/widget/:slug/embed"
    }
  ]
}
